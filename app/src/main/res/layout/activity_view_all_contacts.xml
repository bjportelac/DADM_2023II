<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".ViewAllContacts"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/text_view_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/type_filter"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:padding="10dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/check_type_dev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/developer"
            android:layout_margin="10dp"
            android:checked="true"/>

        <CheckBox
            android:id="@+id/check_type_consult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/consult"
            android:layout_margin="10dp"
            android:checked="true"/>

        <CheckBox
            android:id="@+id/check_type_factory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Factory"
            android:layout_margin="10dp"
            android:checked="true"/>

    </LinearLayout>

    <Button
        android:id="@+id/filter_contacts_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/filter_contacts"
        android:layout_gravity="center"
        />

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"/>

</LinearLayout>